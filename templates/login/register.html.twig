<!DOCTYPE html>
<html>
    <head lang="fr">
        
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title> {{ headTitle }} | TARDIS </title>
            
        <!-- Bootstrap 4 -->
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" crossorigin="anonymous">

        <!-- Custom CSS -->
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Kanit" rel="stylesheet">
    </head>

    <body id="registerPage">
        <div class="container">
            {% for flashMessage in app.session.flashbag.get('danger') %}             
                <div class="alert alert-warning alert-dismissible fade show mt-2 ml-10" role="alert" style="position: absolute; z-index: 1;">
                    <strong>{{ flashMessage }}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>                
            {% endfor %}

            <div class="row justify-content-center">
                <div class="col-md-4 text-center align-self-center mt-5">
                    <a href="{{ path('login') }}" title="Revenir au login">
                        <img src="{{ asset('assets/tardis.png') }}" width="70%"/>
                    </a>
                    <h1>Tardis</h1>
                    <hr class="mb-4">

                    <form action="{{ path('register') }}" method="POST" name="submit">
                        <div class="form-group">
                            <label for="adresseMailInput">Adresse e-mail</label>
                            <input type="email" class="form-control" id="adresseMailInput" maxlength="255" name="submit[_username]" required>
                        </div>
                        <div class="form-group">
                            <label for="passwordInput">Mot de passe</label>
                            <input type="password" class="form-control" id="passwordInput" maxlength="255" name="submit[_password]" required>
                        </div>
                        <div class="form-group">
                            <label for="numeroEtudiantInput">Numéro étudiant</label>
                            <input type="text" class="form-control" id="numeroEtudiantInput" maxlength="8" name="submit[_etudiant]" required>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="notificationsCheckbox" name="submit[_notifications]" checked>
                            <label class="form-check-label" for="notificationsCheckbox">Activer les notifications par e-mail ?</label>
                        </div>
                            <button type="submit" class="btn btn-light mt-3">Valider</button>
                    </form>
                </div>
            </div>
             
        </div>
    </body>

    <!-- Javascript -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

    <!-- Bootstrap -->
    <script src="assets/js/bootstrap.min.js" crossorigin="anonymous"></script>  
</html>