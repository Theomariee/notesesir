<!DOCTYPE html>
<html>
    <head lang="fr">
        
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title> {{ headTitle }} | TARDIS </title>
            
        <!-- Bootstrap 4 -->
        <link rel="stylesheet" href="assets/css/bootstrap.min.css" crossorigin="anonymous">

        <!-- Custom CSS -->
        <link rel="stylesheet" href="assets/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Kanit" rel="stylesheet">
    </head>

    <body id="loginPage">
        <div class="container">
            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show mt-2 ml-10" role="alert" style="position: absolute; z-index: 1;">
                    <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>     
            {% endif %}

            <div class="row justify-content-center">
                <div class="col-md-4 mt-5 text-center align-self-center" id="content">
                    <img src="assets/tardis.png" width="70%"/>
                    <h1>Tardis</h1>
                    <hr class="mb-4">

                    {{ form_start(formLogin) }}
                        <div class="form-group">
                            <label for="numeroEtudiantInput">Adresse e-mail</label>
                            {{ form_widget(formLogin._username, {'attr': {'class': 'form-control', 'id': 'adresseMailInput', 'maxlength': '255'} }) }}
                        </div>
                        <div class="form-group">
                            <label for="numeroEtudiantInput">Mot de passe</label>
                            {{ form_widget(formLogin._password, {'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            <p class="text-muted">Pas encore de compte ? <a href="{{ path('register') }}"> S'inscrire </a></p>
                        </div>
                            <input type="hidden" name="_target_path" value="/dashboard" />
                            {{ form_widget(formLogin.submit, {'attr': {'class': 'btn btn-light mt-3'} }) }}
                    {{ form_end(formLogin) }}

                </div>
            </div>
             
        </div>
    </body>

    <!-- Javascript -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    
    <!-- Bootstrap -->
    <script src="assets/js/bootstrap.min.js" crossorigin="anonymous"></script>  
</html>